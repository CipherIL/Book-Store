<form id="edit-user-form" class="form">
    <div class="form-field">
        <label for="first-name">First Name</label>
        <input type="text" name="first-name" id="edit-first-name">
    </div>
    <div class="form-field">
        <label for="last-name">Last Name</label>
        <input type="text" name="last-name" id="edit-last-name">
    </div>
    <div class="form-field">
        <label for="password">Password</label>
        <input type="password" name="password" id="edit-password">
    </div>
    <div class="form-field">
        <label for="dob">Date Of Birth</label>
        <input type="date" name="dob" id="edit-dob">
    </div>
    <button id="edit-submit" class="submit-button">Submit</button>
    <div id="edit-response" class="response-message"></div>    
</form>